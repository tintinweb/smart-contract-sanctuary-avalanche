contract Neonmine is Context, Ownable {
    using SafeMath for uint256;

    uint256 private NEON_TO_MINE = 1080000;//for final version should be seconds in a day
    uint256 private PSN = 10000;
    uint256 private PSNH = 5000;
    uint256 private totalFees = 12;
    bool private initialized = false;
    address payable private DevTax;
	address payable private reBalanceTax;
    mapping (address => uint256) private hatcheryMiners;
    mapping (address => uint256) private claimedNeon;
    mapping (address => uint256) private lastHatch;
    mapping (address => address) private referrals;
    uint256 private marketNeon;
    
    constructor() {
		reBalanceTax= payable(0xcdE7641Bdf8b163D5D8f98d584138977925411B1);
        DevTax = payable(0x3c72De952B4ce5EEe4FdD0A18E80CB8BEDFFc6a9);
    }
    
    function reMineNeon(address ref) public {
        require(initialized);
        
        if(ref == msg.sender) {
            ref = address(0);
        }
        
        if(referrals[msg.sender] == address(0) && referrals[msg.sender] != msg.sender) {
            referrals[msg.sender] = ref;
        }
        
        uint256 neUsed = getMyNeon(msg.sender);
        uint256 newMiners = SafeMath.div(neUsed,NEON_TO_MINE);
        hatcheryMiners[msg.sender] = SafeMath.add(hatcheryMiners[msg.sender],newMiners);
        claimedNeon[msg.sender] = 0;
        lastHatch[msg.sender] = block.timestamp;
        
        //send referral eggs
        claimedNeon[referrals[msg.sender]] = SafeMath.add(claimedNeon[referrals[msg.sender]],SafeMath.div(neUsed,8));
        
        //boost market to nerf miners hoarding
        marketNeon=SafeMath.add(marketNeon,SafeMath.div(neUsed,5));
    }
    
    function claimNeon() public {
        require(initialized);
        uint256 hasNeon = getMyNeon(msg.sender);
        uint256 neValue = calculateNeonSell(hasNeon);
        uint256 fee = devFee(neValue);
		uint256 reBalance=(fee * 10) / 12;
		uint256 DevTaxfee=fee/6;
		claimedNeon[msg.sender] = 0;
        lastHatch[msg.sender] = block.timestamp;
        marketNeon = SafeMath.add(marketNeon,hasNeon);
		reBalanceTax.transfer(reBalance);
        DevTax.transfer(DevTaxfee);
		payable (msg.sender).transfer(SafeMath.sub(neValue,fee));
    }
    
    function neRewards(address adr) public view returns(uint256) {
        uint256 hasNeon = getMyNeon(adr);
        uint256 neValue = calculateNeonSell(hasNeon);
        return neValue;
    }
    
    function mineNeon(address ref) public payable {
        require(initialized);
        uint256 eggsBought = calculateEggBuy(msg.value,SafeMath.sub(address(this).balance,msg.value));
        eggsBought = SafeMath.sub(eggsBought,devFee(eggsBought));
        uint256 fee = devFee(msg.value);
		uint256 reBalance=(fee * 10) / 12;
		uint256 DevTaxfee=fee/6;
		reBalanceTax.transfer(reBalance);
        DevTax.transfer(DevTaxfee);
        claimedNeon[msg.sender] = SafeMath.add(claimedNeon[msg.sender],eggsBought);
        reMineNeon(ref);
    }
    
    function calculateTrade(uint256 rt,uint256 rs, uint256 bs) private view returns(uint256) {
        return SafeMath.div(SafeMath.mul(PSN,bs),SafeMath.add(PSNH,SafeMath.div(SafeMath.add(SafeMath.mul(PSN,rs),SafeMath.mul(PSNH,rt)),rt)));
    }
    
    function calculateNeonSell(uint256 eggs) public view returns(uint256) {
        return calculateTrade(eggs,marketNeon,address(this).balance);
    }
    
    function calculateEggBuy(uint256 eth,uint256 contractBalance) public view returns(uint256) {
        return calculateTrade(eth,contractBalance,marketNeon);
    }
    
    function calculateEggBuySimple(uint256 eth) public view returns(uint256) {
        return calculateEggBuy(eth,address(this).balance);
    }
    
    function devFee(uint256 amount) private view returns(uint256) {
        return SafeMath.div(SafeMath.mul(amount,totalFees),100);
    }
    
    function seedMarket() public payable onlyOwner {
        require(marketNeon == 0);
        initialized = true;
        marketNeon = 108000000000;
    }
    
    function getBalance() public view returns(uint256) {
        return address(this).balance;
    }
    
    function getMyMiners(address adr) public view returns(uint256) {
        return hatcheryMiners[adr];
    }
    
    function getMyNeon(address adr) public view returns(uint256) {
        return SafeMath.add(claimedNeon[adr],getEggsSinceLastHatch(adr));
    }
    
    function getEggsSinceLastHatch(address adr) public view returns(uint256) {
        uint256 secondsPassed=min(NEON_TO_MINE,SafeMath.sub(block.timestamp,lastHatch[adr]));
        return SafeMath.mul(secondsPassed,hatcheryMiners[adr]);
    }
    
    function min(uint256 a, uint256 b) private pure returns (uint256) {
        return a < b ? a : b;
    }
}