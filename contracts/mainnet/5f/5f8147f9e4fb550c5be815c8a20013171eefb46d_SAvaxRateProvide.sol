 * @notice Returns the value of wstETH in terms of stETH
 */
contract SAvaxRateProvide is IRateProvider {
    IStakedAvax public immutable stakedAVAX;

    constructor(IStakedAvax _stakedAVAX) {
        stakedAVAX = _stakedAVAX;
    }

    /**
