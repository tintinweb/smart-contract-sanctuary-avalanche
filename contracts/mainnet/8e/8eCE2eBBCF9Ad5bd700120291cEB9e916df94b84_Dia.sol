        uint256 periodStart = block.timestamp > interestPeriodStart ? block.timestamp : interestPeriodStart;
        usdc.transferFrom(_msgSender(), address(this), amount);
        maximumCoveredBalance += _calculateMaxVolume(amount, interestPerSecondWithSlippageRay, periodStart, interestPeriodEnd) + amount;
    }

