    function maintainErc20Reserve(address erc20Address) external beforePoolMaintenanceEnd() {

        if (!isTokenSupported(erc20Address)) {
            revert TokenIsNotSupported(erc20Address);
        }

        _withdrawAllUsdc();
        (, uint256 contractTokenBalanceInUsdc) = contractERC20Balance(erc20Address);
        uint256 contractUsdcBalance = usdc.balanceOf(address(this));
        uint256 desiredSupply = supportedTokens[erc20Address].minimumReserveInUsdc.max((contractUsdcBalance + contractTokenBalanceInUsdc) * supportedTokens[erc20Address].reservePercentage / PERCENTAGE);
        if (desiredSupply > contractTokenBalanceInUsdc) {
            _swapUsdcToERC20(erc20Address, desiredSupply - contractTokenBalanceInUsdc);

        } else if (desiredSupply < contractTokenBalanceInUsdc) {
            //buy usdc and supply
            _swapERC20ToUSDC(erc20Address, contractTokenBalanceInUsdc - desiredSupply);
        }
        _depositUsdcToPools();
    }

