    mapping(address => SupportedToken) supportedTokens;
    address[] supportedTokenAddresses;

    bytes32 private constant DEPOSIT_REQUEST_TYPE_HASH = keccak256("DepositRequest(address from,address token,uint256 amount,address receiver,uint256 validAfter,uint256 validBefore,bytes32 nonce)");
    bytes32 private constant WITHDRAW_REQUEST_TYPE_HASH = keccak256("WithdrawRequest(address from,uint256 amount,address tokenAddress,address receiver,uint256 validAfter,uint256 validBefore,bytes32 nonce)");

    IPangolinRouter public pangolinRouter;
    IPool public aavePool;
    StargateRouter public stargateRouter;
    IERC20Metadata public stargatePool;
    StargateLPStaking public stargateLPStaking;
    Benqi public benqiPool;
    address public aTokenAddress;
    address public factory;

    uint256 public interestWarrantyAmount;
    uint256 public cTokenUsdcBasePrice;
    uint256 public cTokenUsdcPriceDecimals;
    uint256 public interestPeriodStart;
    uint256 public interestPeriodEnd;
    uint256 public poolMaintenanceEnd;
    uint256 public interestPerSecondWay;
    uint256 public minimumUsdcReserve;
    uint256 public maximumUsdcReserve;
    uint256 public maximumCoveredBalance;
    uint256 public investedUSDCAmountWithInterest;
    uint256 public lastInterestCalculated;
    uint256 public aaveMinimumTvl;
    uint256 public stargateMinimumTvl;
    uint256 public benqiMinimumTvl;
    uint16 public usdcReservePercentage;
    uint16 public slippagePercentage;
    uint16 public aaveWeightModifier;
    uint16 public stargateWeightModifier;
    uint16 public benqiWeightModifier;
    uint256 public interestPerSecondWithSlippageRay;
    uint16 constant public PERCENTAGE = 10000;

    constructor() {
        _disableInitializers();
    }
    function initialize(
        ConstructParameters memory params
    ) external initializer {
        __AuthorizedActions_init(params.name, "1.0");
        __ERC20_init(params.name, params.symbol);
        __AccessControl_init();

        _setupRole(DEFAULT_ADMIN_ROLE, params.adminAddress);
        _setupRole(ADMIN_ROLE, params.adminAddress);
        _setupRole(WITHDRAW_ROLE, params.adminAddress);
        _setupRole(DEPOSIT_ROLE, params.adminAddress);

        pangolinRouter = IPangolinRouter(params.pangolinRouterAddress);
        minimumUsdcReserve = params.minimumUsdcReserve;
        maximumUsdcReserve = params.maximumUsdcReserve;
        aavePool = IPool(params.aavePoolAddress);
        aTokenAddress = params.aTokenAddress;
        stargatePool = IERC20Metadata(params.stargatePoolAddress);
        stargateRouter = StargateRouter(params.stargateRouterAddress);
        stargateLPStaking = StargateLPStaking(params.stargateLpStakingAddress);
        benqiPool = Benqi(params.benqiPoolAddress);

        interestWarrantyAmount = params.interestWarrantyAmount;
        cTokenUsdcBasePrice = params.cTokenUsdcBasePrice;
        interestPerSecondWay = params.interestPerYearWad.yearlyRateToRay();
        usdc = IERC20Metadata(params.usdcAddress);
        cTokenUsdcPriceDecimals = params.cTokenUsdcPriceDecimals;

        usdcReservePercentage = params.usdcReservePercentage;
        slippagePercentage = params.slippagePercentage;
        interestPeriodStart = params.interestPeriodStart;
        interestPeriodEnd = params.interestPeriodEnd;
        poolMaintenanceEnd = params.poolMaintenanceEnd;
