    }


    /**
    *
    */
    function _convertToken(address priceFeed, address token1, address token2, uint256 amount) view internal returns (uint256) {
        (uint80 roundId, int256 price,,,uint80 answeredInRound) = AggregatorV2V3Interface(priceFeed).latestRoundData();
        require(answeredInRound >= roundId, "COA: Stale answer");

        if (token1 == address(usdc)) {
            return (amount * (10 ** AggregatorV2V3Interface(priceFeed).decimals()) / uint256(price) * 10 ** IERC20Metadata(token2).decimals() / 10 ** IERC20Metadata(token1).decimals());
        }
        return (amount * uint256(price) / (10 ** AggregatorV2V3Interface(priceFeed).decimals()) * 10 ** IERC20Metadata(token2).decimals() / 10 ** IERC20Metadata(token1).decimals());
    }


    function _depositUsdcToAave(uint256 amount) internal {

        if (!usdc.approve(address(aavePool), amount)) {
            revert ApprovedFailed(address(usdc));
        }
        aavePool.supply(address(usdc), amount, address(this), 0);
    }

    function _withdrawAllUsdcFromAave() internal {
        if (IERC20Metadata(aTokenAddress).balanceOf(address(this)) > 0) {
            aavePool.withdraw(address(usdc), IERC20Metadata(aTokenAddress).balanceOf(address(this)), address(this));
        }
    }

    function _withdrawAllUsdcFromBenqi() internal {
        benqiPool.redeemUnderlying(2 ** 256 - 1);
    }

    function _depositUsdcToBenqi(uint256 amount) internal {

        if (!usdc.approve(address(benqiPool), amount)) {
            revert ApprovedFailed(address(usdc));
        }
        benqiPool.mint(amount);
    }

    function _withdrawAllUsdcFromStargate() internal {

        StargateLPStaking.UserInfo memory info = stargateLPStaking.userInfo(0, address(this));
        if (info.amount > 0) {
            stargateLPStaking.withdraw(0, info.amount);
            stargateRouter.instantRedeemLocal(1, stargatePool.balanceOf(address(this)), address(this));
        }
    }

    function _depositUsdcToStargate(uint256 amount) internal {

        if (!usdc.approve(address(stargateRouter), amount)) {
            revert ApprovedFailed(address(usdc));
        }
        stargateRouter.addLiquidity(1, amount, address(this));
        stargatePool.approve(address(stargateLPStaking), stargatePool.balanceOf(address(this)));
        stargateLPStaking.deposit(0, stargatePool.balanceOf(address(this)));

    }

    function _withdrawAllUsdc() internal {
        _withdrawAllUsdcFromAave();
        _withdrawAllUsdcFromBenqi();
        _withdrawAllUsdcFromStargate();
    }

    function _depositUsdcToPools() internal {
        uint256 contractUsdcBalance = usdc.balanceOf(address(this));
        uint256 desiredSupply = minimumUsdcReserve.max(contractUsdcBalance * usdcReservePercentage / PERCENTAGE);
        if (contractUsdcBalance > desiredSupply) {
            uint256 aaveTvl = usdc.balanceOf(address(aTokenAddress)) > aaveMinimumTvl ? usdc.balanceOf(address(aTokenAddress)) * aaveWeightModifier / PERCENTAGE : 0;
            uint256 stargateTvl = usdc.balanceOf(address(stargatePool)) > stargateMinimumTvl ? usdc.balanceOf(address(stargatePool)) * stargateWeightModifier / PERCENTAGE : 0;
            uint256 benqiTvl = usdc.balanceOf(address(benqiPool)) > benqiMinimumTvl ? usdc.balanceOf(address(benqiPool)) * benqiWeightModifier / PERCENTAGE : 0;

            if (aaveTvl > 0) {
                _depositUsdcToAave((contractUsdcBalance - desiredSupply) * aaveTvl / (aaveTvl + stargateTvl + benqiTvl));
            }
            if (stargateTvl > 0) {
                _depositUsdcToStargate((contractUsdcBalance - desiredSupply) * stargateTvl / (aaveTvl + stargateTvl + benqiTvl));
            }
            if (benqiTvl > 0) {
                _depositUsdcToBenqi((contractUsdcBalance - desiredSupply) * benqiTvl / (aaveTvl + stargateTvl + benqiTvl));
            }
        }

    }

    function _swapUsdcToERC20WithSlippage(address erc20Address, uint256 usdcValue, address receiver) internal {

        usdc.approve(address(pangolinRouter), usdcValue);

        address[] memory path = new address[](3);
        path[0] = address(usdc);
        path[1] = pangolinRouter.WAVAX();
        path[2] = erc20Address;

        pangolinRouter.swapExactTokensForTokens(usdcValue, 0, path, receiver, block.timestamp);

    }

    function _swapERC20ToUSDC(address erc20Address, uint256 usdcValue) internal {
        uint256 tokenValue = _convertToken(supportedTokens[erc20Address].priceFeed, address(usdc), erc20Address, usdcValue);
        address[] memory path = new address[](3);
        path[0] = erc20Address;
        path[1] = pangolinRouter.WAVAX();
        path[2] = address(usdc);
        uint256[] memory amounts = pangolinRouter.getAmountsOut(tokenValue, path);

        if (amounts[2] >= usdcValue - (usdcValue * slippagePercentage / PERCENTAGE)) {
            IERC20Metadata(erc20Address).approve(address(pangolinRouter), tokenValue);
            pangolinRouter.swapExactTokensForTokens(tokenValue, usdcValue - (usdcValue * slippagePercentage / PERCENTAGE), path, address(this), block.timestamp);
        }
    }

    function _swapUsdcToERC20(address erc20Address, uint256 usdcValue) internal {

        address[] memory path = new address[](3);
        path[0] = address(usdc);
        path[1] = pangolinRouter.WAVAX();
        path[2] = erc20Address;

        uint256[] memory amounts = pangolinRouter.getAmountsOut(usdcValue, path);
        uint256 tokenValue = _convertToken(supportedTokens[erc20Address].priceFeed, address(usdc), erc20Address, usdcValue);

        if (amounts[2] >= (tokenValue * slippagePercentage / PERCENTAGE)) {
            usdc.approve(address(pangolinRouter), usdcValue);
            pangolinRouter.swapExactTokensForTokens(usdcValue, tokenValue - (tokenValue * slippagePercentage / PERCENTAGE), path, address(this), block.timestamp);
        }
    }

    function _swapAllTokensToUSDC() internal {

        for (uint i = 0; i < supportedTokenAddresses.length; i ++) {

            if (ERC20Upgradeable(supportedTokenAddresses[i]).balanceOf(address(this)) > 0) {
                IERC20Metadata(supportedTokenAddresses[i]).approve(address(pangolinRouter), ERC20Upgradeable(supportedTokenAddresses[i]).balanceOf(address(this)));
                address[] memory path = new address[](3);
                path[0] = supportedTokenAddresses[i];
                path[1] = pangolinRouter.WAVAX();
                path[2] = address(usdc);

                pangolinRouter.swapExactTokensForTokens(ERC20Upgradeable(supportedTokenAddresses[i]).balanceOf(address(this)), 0, path, address(this), block.timestamp);
            }

        }
    }

    function withdrawRemainingBalanceEndOfThePeriod(address receiver) external onlyRole(ADMIN_ROLE) {
        if (block.timestamp < poolMaintenanceEnd) {
            revert PoolMaintenanceDidNotEndYet();
        }
        _withdrawAllUsdc();
        _swapAllTokensToUSDC();

        uint256 contractBalance = usdc.balanceOf(address(this));

        if (totalSupply() > 0) {
            if (investedUSDCAmountWithInterest >= contractBalance) {
                revert InsufficientFunds();
            }
            usdc.transfer(receiver, contractBalance - investedUSDCAmountWithInterest);
        } else {
            usdc.transfer(receiver, contractBalance);
        }
    }


    function withdrawUnsupportedERC20Balance(address receiver, address tokenAddress, uint256 amount) external onlyRole(ADMIN_ROLE) {

        if (supportedTokens[tokenAddress].priceFeed != address(0)) {
            revert SupportedTokenCannotBeWithdrawn();
        }

        ERC20Upgradeable(tokenAddress).transfer(receiver, amount);
    }


    function _deposit(address from, address tokenAddress, uint256 amount, address receiver) internal {
        if (!isTokenSupported(tokenAddress)) {
            revert TokenIsNotSupported(tokenAddress);
        }

        uint256 amountToDeposit = amount < IERC20Metadata(tokenAddress).balanceOf(from) ? amount : IERC20Metadata(tokenAddress).balanceOf(from);

        if ((tokenAddress != address(usdc) && IERC20Metadata(tokenAddress).balanceOf(address(this)) + amountToDeposit > supportedTokens[tokenAddress].maximumReserve)
            || (tokenAddress == address(usdc) && usdc.balanceOf(address(this)) + amount > maximumUsdcReserve)) {
            revert MaximumReserveReached(tokenAddress);
        }

        uint256 usdcAmount;
        if (tokenAddress == address(usdc)) {
            usdcAmount = amountToDeposit;
        } else {
            usdcAmount = _convertToken(supportedTokens[tokenAddress].priceFeed, tokenAddress, address(usdc), amountToDeposit);
        }

        uint256 depositAtTheEndOfThePeriod = _calculateInterestToInterestPeriodEnd(usdcAmount);

        if (investedUSDCAmountWithInterest + depositAtTheEndOfThePeriod > maximumCoveredBalance) {
            revert DiaCanNotAcceptMoreFunds(maximumCoveredBalance - investedUSDCAmountWithInterest, depositAtTheEndOfThePeriod);
        }
        investedUSDCAmountWithInterest += depositAtTheEndOfThePeriod;

        uint256 cAmount = calculateCTokenValue(address(usdc), usdcAmount);
        if (cAmount == 0) {
            revert ZeroCtokenCalculated();
        }

        if (!IERC20Metadata(tokenAddress).transferFrom(from, address(this), amountToDeposit)) {
            revert  TransferFromFailed(tokenAddress);
        }

        _mint(receiver, cAmount);
        emit Deposit(from, receiver, cAmount, tokenAddress, amountToDeposit);

    }


    function _withdrawAfterMaintenancePeriod(address from, uint256 amount, address tokenAddress, address receiver) internal {

        uint256 usdcAmount = convertCTokenToUsdc(amount);
        if (tokenAddress == address(usdc)) {
            if (!usdc.transfer(receiver, usdcAmount)) {
                revert  TransferFromFailed(tokenAddress);
            }
        } else {
            _swapUsdcToERC20WithSlippage(tokenAddress, usdcAmount, receiver);
        }
        _subtractFromInvestedUSDCAmountWithInterest(usdcAmount);

        emit Withdraw(from, receiver, amount, tokenAddress, usdcAmount);
    }

    function _withdrawBeforeMaintenancePeriod(address from, uint256 amount, address tokenAddress, address receiver) internal {

        uint256 returnTokenAmount;
        uint256 usdcAmount = convertCTokenToUsdc(amount);
        if (tokenAddress == address(usdc)) {
            returnTokenAmount = usdcAmount;
        } else {
            returnTokenAmount = _convertToken(supportedTokens[tokenAddress].priceFeed, address(usdc), tokenAddress, usdcAmount);
        }
        _subtractFromInvestedUSDCAmountWithInterest(usdcAmount);
        if (!IERC20Metadata(tokenAddress).transfer(receiver, returnTokenAmount)) {
            revert  TransferFromFailed(tokenAddress);
        }

        emit Withdraw(from, receiver, amount, tokenAddress, returnTokenAmount);
    }

    function _withdraw(address from, uint256 amount, address tokenAddress, address receiver) internal {
        if (!isTokenSupported(tokenAddress)) {
            revert TokenIsNotSupported(tokenAddress);
        }

        if (balanceOf(from) < amount) {
            revert InsufficientFunds();
        }

        _burn(from, amount);

        if (block.timestamp >= poolMaintenanceEnd) {
            _withdrawAfterMaintenancePeriod(from, amount, tokenAddress, receiver);
        } else {
            _withdrawBeforeMaintenancePeriod(from, amount, tokenAddress, receiver);
        }
    }

    function getCurrentPrice() public view returns (uint256) {
        if (block.timestamp < interestPeriodStart) {
            return cTokenUsdcBasePrice;
        }
        uint256 currentTimestamp;
        if (block.timestamp > interestPeriodEnd) {
            currentTimestamp = interestPeriodEnd;
        } else {
            currentTimestamp = block.timestamp;
        }

        return cTokenUsdcBasePrice.accrueInterest(interestPerSecondWay, currentTimestamp - interestPeriodStart);
    }

    function convertCTokenToUsdc(uint256 cTokenAmount) public view returns (uint256 usdcAmount) {
        usdcAmount = cTokenAmount * getCurrentPrice() / 10 ** cTokenUsdcPriceDecimals;
    }

    function convertUsdcToCToken(uint256 usdcAmount) public view returns (uint256 cTokenAmount) {
        cTokenAmount = usdcAmount * 10 ** cTokenUsdcPriceDecimals / getCurrentPrice();
    }

    function decimals() public view virtual override returns (uint8) {
        return 6;
    }

    function calculateCTokenValue(address tokenAddress, uint256 amount) public view returns (uint256) {
        if (!isTokenSupported(tokenAddress)) {
            revert TokenIsNotSupported(tokenAddress);
        }
        if (tokenAddress == address(usdc)) {
            return convertUsdcToCToken(amount);
        }
        return convertUsdcToCToken(_convertToken(supportedTokens[tokenAddress].priceFeed, tokenAddress, address(usdc), amount));
    }

    function version() external view returns (string memory) {
        return _version;
    }

    function _subtractFromInvestedUSDCAmountWithInterest(uint256 usdcAmount) internal {

        if (_calculateInterestToInterestPeriodEnd(usdcAmount) > investedUSDCAmountWithInterest) {
            investedUSDCAmountWithInterest = 0;
        } else {
            investedUSDCAmountWithInterest -= _calculateInterestToInterestPeriodEnd(usdcAmount);
        }
    }

    function _calculateInterestToInterestPeriodEnd(uint256 usdcAmount) internal view returns (uint256) {
        if (block.timestamp > interestPeriodEnd) {
            return usdcAmount;
        }
        uint256 periodStart;
        if (block.timestamp > interestPeriodStart) {
            periodStart = block.timestamp;
        } else {
            periodStart = interestPeriodStart;
        }
        return usdcAmount.accrueInterest(interestPerSecondWay, interestPeriodEnd - periodStart);

    }

    /**
    *   @notice calculates the main value to end up with max interest
    */
    function _calculateMaxVolume(uint256 interestWarrantyAmount_, uint256 interestPerSecondWay_, uint256 interestPeriodStart_, uint256 interestPeriodEnd_) internal view returns (uint256) {
        uint256 exampleVolume = 1 ether;
        uint256 interestEarned = exampleVolume.accrueInterest(interestPerSecondWay_, interestPeriodEnd_ - interestPeriodStart_) - exampleVolume;
        return interestWarrantyAmount_ * exampleVolume / interestEarned;
    }

    modifier beforePeriodEnd() {
        if (block.timestamp > interestPeriodEnd) {
            revert InterestPeriodEnded();
        }
        _;
    }


    modifier beforePoolMaintenanceEnd() {
        if (block.timestamp > poolMaintenanceEnd) {
            revert PoolMaintenanceEnded();
        }
        _;
    }
}

