// @title  Helper contract for NFTLoan. This contract manages verifying signatures
//         from off-chain Lendup orders.
contract SigningUtils {
    /* ********* */
    /* FUNCTIONS */
    /* ********* */

    // @notice OpenZeppelin's ECDSA library is used to call all ECDSA functions
    //         directly on the bytes32 variables themselves.
    using ECDSA for bytes32;

    // @notice This function gets the current chain ID.
    function getChainID() public view returns (uint16) {
        uint16 id;
        assembly {
            id := chainid()
        }
        return id;
    }

    function isValidBorrowerSignature(
        address _nftCollateralContract,
        uint256 _nftCollateralId,
        uint32 _borrowerNonce,
        uint256 _borrowerExpiry,
        address _borrower,
        uint16 _chainId,
        bytes memory _borrowerSignature
    ) public pure returns (bool) {
        if (_borrower == address(0)) {
            return false;
        } else {
            bytes32 message = keccak256(
                abi.encodePacked(
                    _nftCollateralContract,
                    _nftCollateralId,
                    _borrowerNonce,
                    _borrowerExpiry,
                    _borrower,
                    _chainId
                )
            );

            bytes32 messageWithEthSignPrefix = message.toEthSignedMessageHash();

            return (messageWithEthSignPrefix.recover(_borrowerSignature) ==
                _borrower);
        }
    }

    function isValidLenderSignature(
        NFTLoanStructs.LenderDetail memory _lenderDetail,
        address _loanERC20Token,
        address _lender,
        address _nftCollateralContract,
        uint256 _nftCollateralId,
        uint16 _chainId
    ) public pure returns (bool) {
        if (_lender == address(0)) {
            return false;
        } else {
            bytes32 message = keccak256(
                abi.encodePacked(
                    _loanERC20Token,
                    _lenderDetail.loanPrincipalAmount,
                    _lenderDetail.loanRepaymentAmount,
                    _lenderDetail.loanAdminFeeInBasisPoints,
                    _lenderDetail.loanDuration,
                    _chainId, // as loan is same chain so lender's must have signed with this chainId
                    _lenderDetail.lenderNonce,
                    _lenderDetail.lenderExpiry,
                    _nftCollateralId,
                    _nftCollateralContract,
                    _lender
                )
            );

            bytes32 messageWithEthSignPrefix = message.toEthSignedMessageHash();

            return (messageWithEthSignPrefix.recover(
                _lenderDetail.lenderSignature
            ) == _lender);
        }
    }
}

