/**
 * @title NFTLoan
 */
contract NFTLoan is NFTLoanGovernance, SigningUtils {
    using BytesLib for bytes;

    using SafeERC20 for IERC20;
    using SafeERC20 for IWETH;

    using SafeMath for uint256;

    receive() external payable {}

    function registerLoanSameChain(
        NFTLoanStructs.BorrowerDetail memory borrowerDetails,
        NFTLoanStructs.LenderDetail memory lenderDetails
    ) external {
        // signature reuse check
        require(
            !isSignatureConsumed(lenderDetails.lenderSignature),
            "Signature already used"
        );

        // checking expiry of borrower's signature
        require(
            block.timestamp < lenderDetails.lenderExpiry,
            "Lender's Signature Expired"
        );

        // verifying signature's validity
        require(
            isValidLenderSignature(
                lenderDetails,
                _truncateAddress(lenderDetails.loanErc20Token),
                _truncateAddress(lenderDetails.lender),
                _truncateAddress(borrowerDetails.nftCollateralContract),
                borrowerDetails.nftCollateralId,
                chainId()
            ),
            "Lender signature is invalid"
        );
        // marking signature as used to prevetn reuse
        setSignatureConsumed(lenderDetails.lenderSignature);

        NFTLoanStructs.Offer memory offer = NFTLoanStructs.Offer(
            lenderDetails.loanPrincipalAmount,
            lenderDetails.loanRepaymentAmount,
            chainId(),
            borrowerDetails.nftCollateralId,
            borrowerDetails.nftCollateralContract,
            lenderDetails.loanDuration,
            lenderDetails.loanErc20Token,
            lenderDetails.loanAdminFeeInBasisPoints,
            lenderDetails.lenderChainId,
            lenderDetails.lender
        );
        registerLoan(
            offer,
            borrowerDetails.borrowerSignature,
            borrowerDetails.borrowerExpiry,
            borrowerDetails.borrowerNonce,
            0 // as same chain loan will not use this value
        );
    }

    /**
     * acceptOffer on same chain.
     */
    function registerLoan(
        NFTLoanStructs.Offer memory offer,
        bytes memory borrowerSignature,
        uint256 borrowerExpiry,
        uint32 borrowerNonce,
        uint32 nonce
    ) public returns (uint256) {
        // signature reuse check
        require(
            !isSignatureConsumed(borrowerSignature),
            "Signature already used"
        );

        // checking expiry of borrower's signature
        require(block.timestamp < borrowerExpiry, "Borrower Signature Expired");

        // verifying signature's validity

        require(
            isValidBorrowerSignature(
                _truncateAddress(offer.nftCollateralContract),
                offer.nftCollateralId,
                borrowerNonce, //_borrowerNonce,
                borrowerExpiry,
                msg.sender, //borrower,
                chainId(),
                borrowerSignature
            ),
            "Borrower signature is invalid"
        );
        // marking signature as used to prevent reuse
        setSignatureConsumed(borrowerSignature);
        require(offer.nftChainId == chainId(), "Invalid target chain");
        address collateralNFT = _truncateAddress(offer.nftCollateralContract);
        require(collateralNFT != address(0), "Invalid collateral NFT");
        require(
            IERC721(collateralNFT).ownerOf(offer.nftCollateralId) == msg.sender,
            "Invalid NFT owner"
        );
        require(offer.loanDuration > 0, "Invalid loan duration");

        require(offer.loanPrincipalAmount > 0, "Invalid loan amount");
        require(
            offer.loanRepaymentAmount >= offer.loanPrincipalAmount,
            "Invalid repayment amount"
        );

        // here now we will start for loan
        return _createLoan(offer, nonce);
    } // end of loan.

    /**
     * In case of cross chain loan. We do get vaa from wormhole and then call this complete create loan function.
     */
    function completeCreateLoan(
        bytes memory _encodedVAA,
        uint32 _lenderNonce,
        uint256 _lenderExpiry,
        bytes memory _lenderSignature,
        uint32 _nonce // for wormhole
    ) external returns (uint256) {
        IWormhole wormhole = wormhole();

        (IWormhole.VM memory vm, bool valid, string memory reason) = wormhole
            .parseAndVerifyVM(_encodedVAA);

        require(valid, reason);

        require(verifyEmitterVM(vm), "invalid emitter");

        require(!isMessageConsumed(vm.hash), "VAA Already used");

        setMessageConsumed(vm.hash);

        NFTLoanStructs.Loan memory loan = decodeLoan(vm.payload);
        address tokenContract = _truncateAddress(loan.loanERC20Contract);
        address lender = _truncateAddress(loan.lender);
        address borrower = _truncateAddress(loan.borrower);
        {
            isSignatureConsumed(_lenderSignature);
            NFTLoanStructs.LenderDetail memory lenderDetail = NFTLoanStructs
                .LenderDetail(
                    loan.loanERC20Contract,
                    loan.loanPrincipalAmount,
                    loan.loanRepaymentAmount,
                    loan.loanAdminFeeInBasisPoints,
                    loan.loanDuration,
                    chainId(),
                    _lenderNonce,
                    _lenderExpiry,
                    loan.lender,
                    _lenderSignature
                );

            require(
                isValidLenderSignature(
                    lenderDetail,
                    tokenContract,
                    lender,
                    _truncateAddress(loan.nftCollateralContract),
                    loan.nftCollateralId,
                    chainId()
                ),
                "Invalid Lender Signature"
            );
            setSignatureConsumed(_lenderSignature);
        }

        // require(
        //     msg.sender == _truncateAddress(loan.lender),
        //     "Lender Miss match"
        // );

        require(loan.loanChainId == chainId(), "Invalid Laon chain");

        require(
            loan.status == NFTLoanStructs.LoanStatusType.ACTIVE,
            "Loan either repaid or Liquidated"
        );

        // @todo ask about this part, should we do it like this or not
        // if allowance is insufficient then generate the loan cancellation message for NFT chain to release the nft collateral
        if (
            IERC20(tokenContract).allowance(lender, address(this)) <
            loan.loanRepaymentAmount
        ) {
            // create cancellation VAA and return
            loan.status == NFTLoanStructs.LoanStatusType.CANCELLED;
            setLoan(loan.loanId, loan.nftChainId, loan);
            return _cancelLoanCrossChain(loan, _nonce);
        }

        setLoan(loan.loanId, loan.nftChainId, loan);

        uint256 adminFee = computeAdminFee(
            loan.loanRepaymentAmount - loan.loanPrincipalAmount,
            loan.loanAdminFeeInBasisPoints
        );
        // transferring tokens to lender with interest
        _transferTokens(tokenContract, adminFee, lender, address(this));
        // transferring to borrower after deducting fees
        _transferTokens(
            tokenContract,
            loan.loanPrincipalAmount - adminFee,
            lender,
            borrower
        );
        emit LoanCreated(loan.loanId);
        return 0;
    } // end of comleteCreateLoan

    /**
     * initiate loan repayment.
     */
    function repayLoan(
        uint256 loanId,
        uint16 otherChainId,
        uint32 nonce
    ) external {
        _repayLoan(loanId, otherChainId, nonce);
    }

    /**
     * In case of cross chain loan repayment. We do get vaa from wormhole and then call this complete repay loan function.
     */
    function completeRepayLoan(bytes memory _encodedVAA) external {
        IWormhole wormhole = wormhole();

        (IWormhole.VM memory vm, bool valid, string memory reason) = wormhole
            .parseAndVerifyVM(_encodedVAA);

        require(valid, reason);

        require(verifyEmitterVM(vm), "invalid emitter");

        require(!isMessageConsumed(vm.hash), "VAA already used");

        setMessageConsumed(vm.hash);

        NFTLoanStructs.Loan memory loan = decodeLoan(vm.payload);

        require(loan.nftChainId == chainId(), "Invalid NFT chain");
        require(
            loan.status == NFTLoanStructs.LoanStatusType.REPAID,
            "Loan Not repaid or Liquidated"
        );

        loan.status = NFTLoanStructs.LoanStatusType.REPAID;
        setLoan(loan.loanId, loan.loanChainId, loan);

        // it means offer is on same chain.
        _transferNFT(
            loan.nftCollateralContract,
            loan.nftCollateralId,
            address(this),
            _truncateAddress(loan.borrower)
        );
        emit LoanRepayed(loan.loanId);
    } // end of completeRepayLoan

    function liquidateLoan(
        uint256 loanId,
        uint16 otherChainId,
        uint32 nonce
    ) external {
        _liquidateLoan(loanId, otherChainId, nonce);
    }

    /**
     *
     * In case of cross chain loan liquidation. We do get vaa from wormhole and then call this complete liquidate loan function.
     */
    function completeLiquidateLoan(bytes memory _encodedVAA) external {
        IWormhole wormhole = wormhole();

        (IWormhole.VM memory vm, bool valid, string memory reason) = wormhole
            .parseAndVerifyVM(_encodedVAA);

        require(valid, reason);

        require(verifyEmitterVM(vm), "invalid emitter");

        require(!isMessageConsumed(vm.hash), "VAA Already used");

        setMessageConsumed(vm.hash);

        NFTLoanStructs.Loan memory loan = decodeLoan(vm.payload);

        require(loan.nftChainId == chainId(), "Invalid NFT chain");

        require(
            loan.status == NFTLoanStructs.LoanStatusType.LIQUIDATED,
            "Loan either not active or repaid"
        );

        loan.status = NFTLoanStructs.LoanStatusType.LIQUIDATED;
        setLoan(loan.loanId, loan.loanChainId, loan);

        // it means offer is on same chain.
        _transferNFT(
            loan.nftCollateralContract,
            loan.nftCollateralId,
            address(this),
            _truncateAddress(loan.lender)
        );
        emit LoanLiquidated(loan.loanId);
    } // end of completeLiquidateLoan

    function completeCancelLoan(bytes memory _encodedVAA) external {
        IWormhole wormhole = wormhole();

        (IWormhole.VM memory vm, bool valid, string memory reason) = wormhole
            .parseAndVerifyVM(_encodedVAA);

        require(valid, reason);

        require(verifyEmitterVM(vm), "invalid emitter");

        require(!isMessageConsumed(vm.hash), "VAA Already used");

        setMessageConsumed(vm.hash);

        NFTLoanStructs.Loan memory loan = decodeLoan(vm.payload);
        NFTLoanStructs.Loan memory loanCurrentChain = getLoan(
            loan.loanId,
            loan.loanChainId
        );
        require(
            loanCurrentChain.status == NFTLoanStructs.LoanStatusType.ACTIVE,
            "Invalid Request"
        );
        require(loan.nftChainId == chainId(), "Invalid NFT chain");

        require(
            loan.status == NFTLoanStructs.LoanStatusType.CANCELLED,
            "Loan Invalid request"
        );

        loan.status = NFTLoanStructs.LoanStatusType.CANCELLED;
        setLoan(loan.loanId, loan.loanChainId, loan);

        // now releasing the collateral to the borrower
        _transferNFT(
            loan.nftCollateralContract,
            loan.nftCollateralId,
            address(this),
            _truncateAddress(loan.borrower)
        );
    }
} // end of class

