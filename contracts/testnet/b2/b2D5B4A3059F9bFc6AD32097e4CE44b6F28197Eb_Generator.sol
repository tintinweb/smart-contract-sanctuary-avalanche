pragma solidity 0.8.17;

import "./IImplLib.sol";
import "../Utils/IAdmin.sol";
import "../Utils/Admin.sol";

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

import { Clones } from "@openzeppelin/contracts/proxy/Clones.sol";

contract Generator is Admin {
    using SafeMath for uint256;
    using Strings for uint256;
    using Counters for Counters.Counter;

    Counters.Counter private _idCounter;

    address public implementation;

    event CollectionGenerated(uint256 indexed idCounter, address indexed collection, address indexed creator, uint256 timestamp);
    event CollectionGenerated2(uint256 indexed idCounter, address indexed collection, bytes32 indexed key, uint256 timestamp);

    constructor(address _implementation){
        implementation = _implementation;
    }
    
    //generate entity
    function generateCollection(
        address _creator, 
        string memory _name, 
        string memory _symbol, 
        bytes32 _key, 
        uint256 _typeCollection,
        string memory _init_uri,
        bytes32 msgHash
    ) public{
        //generate
        require(_typeCollection == 1 || _typeCollection == 2, "only ERC721 or ERC1155");

        address _new;

        if(_typeCollection == 1){
            _new = Clones.clone(IImplLib(implementation).implERC721());
            IImplLib(implementation).addMap(_key, _new, 1, _creator);
        }
        else{
            _new = Clones.clone(IImplLib(implementation).implERC1155());
            IImplLib(implementation).addMap(_key, _new, 2, _creator);
        }
        IImplLib(_new).initialize(_name, _symbol, _creator, _init_uri, msgHash);
        

        IAdmin(_new).addAdmin(_creator);
        IAdmin(_new).removeAdmin(address(this));
        IAdmin(_new).transferOwnership(_creator);        

        emit CollectionGenerated(_idCounter.current(), _new, _creator, block.timestamp);
        emit CollectionGenerated2(_idCounter.current(), _new, _key, block.timestamp);

        _idCounter.increment();
    }

}

