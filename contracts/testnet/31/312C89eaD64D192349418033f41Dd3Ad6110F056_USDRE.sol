import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "../../interfaces/IWhitelistChecker.sol";

contract AddressWhitelisting is OwnableUpgradeable, IWhitelistChecker {
    mapping(address => bool) private _whitelistedAddresses;

    event Whitelisted(address indexed whitelistedAddress);

    event WhitelistRemoved(address indexed addressToRemove);

    function initialize() external initializer {
        __Ownable_init();
    }

    function whitelist(address addressToWhitelist) external onlyOwner {
        if (!_whitelistedAddresses[addressToWhitelist]) {
            _whitelistedAddresses[addressToWhitelist] = true;
            emit Whitelisted(addressToWhitelist);
        }
    }

    function removeWhitelist(address addressToRemove) external onlyOwner {
        if (_whitelistedAddresses[addressToRemove]) {
            _whitelistedAddresses[addressToRemove] = false;
            emit WhitelistRemoved(addressToRemove);
