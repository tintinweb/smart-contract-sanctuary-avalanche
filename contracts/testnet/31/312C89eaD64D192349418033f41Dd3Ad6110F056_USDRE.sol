contract MintHelper is IMintHelper, Initializable, MintHelperAuthorization {
    using SafeERC20Upgradeable for IERC20Upgradeable;

    uint256 public constant weightsPrecision = 1e6;
    string public constant CONTRACT_VERSION = "v.0.0.2";
    address public rewardToken;
    address[] public buckets;
    uint256[] public weights;

    function initialize(
        address _rewardToken,
        address[] memory _buckets,
        uint256[] memory _weights
    ) external initializer {
        require(_rewardToken != address(0), "reward token should be specified");
        rewardToken = _rewardToken;
        buckets = _buckets;
        weights = _weights;
        _checkParams();
        _checkBuckets();
        _checkWeights();
        __MintHelperAuthorization_init(msg.sender);
        emit BucketsUpdated(_buckets, _weights);
    }

    function updateBuckets(address[] memory _buckets, uint256[] memory _weights) external override onlyAdmin {
        buckets = _buckets;
        weights = _weights;
        _checkParams();
        _checkBuckets();
        _checkWeights();
        emit BucketsUpdated(_buckets, _weights);
    }

    function mintAndDistribute() external override onlyDistributor {
        uint256 availableToMint = PredefinedEmissionRewardToken(rewardToken).maxTotalSupplyForCurrentBlock() -
            PredefinedEmissionRewardToken(rewardToken).totalSupply();
        PredefinedEmissionRewardToken(rewardToken).mint(address(this), availableToMint);
        for (uint256 i = 0; i < buckets.length; i++) {
            uint256 toBucket = (availableToMint * weights[i]) / weightsPrecision;
            IERC20Upgradeable(rewardToken).safeTransfer(buckets[i], toBucket);
        }
    }

    function _checkParams() private view {
        require(buckets.length == weights.length, "We should have the same amount of weights as buckets");
    }

    function _checkWeights() private view {
        uint256 totalWeights = 0;
        for (uint256 i = 0; i < weights.length; i++) {
            totalWeights += weights[i];
        }
        require(totalWeights == weightsPrecision, "Sum of all weights should be equal weightsPrecision");
    }

    function _checkBuckets() private view {
        for (uint256 i = 0; i < buckets.length; i++) {
            require(buckets[i] != address(0), "Bucket should be a valid address");
        }
    }
}

