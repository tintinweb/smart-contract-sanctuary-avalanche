contract PredefinedEmissionRewardToken is
    Initializable,
    RewardTokenAuthorization,
    ERC20SnapshotUpgradeable,
    ERC20CappedUpgradeable
{
    string public constant REWARD_TOKEN_NAME = "Cover RE (reward token)";
    string public constant REWARD_TOKEN_SYMBOL = "RE";

    uint256 internal constant _PRECISION = 1e18;

    /// @notice Maximum total supply -  1 billion
    uint256 public constant HARD_CAP = 1e9 * _PRECISION;

    /// 20%
    uint256 public constant INITIAL_TOKEN_AMOUNT = 1e7 * _PRECISION;

    /// @notice Minting period - 8 years
    uint256 public constant MINTING_PERIOD = 252455616;

    /// @notice Start date of minting
    uint256 public mintingStartTs;
    /// @notice End date of minting
    uint256 public mintingEndTs;

    event StartMinting(uint256 startTimestamp);

    function initialize() external initializer {
        __RewardTokenAuthorization_init(msg.sender);
        __ERC20Capped_init(HARD_CAP);
        __ERC20_init(REWARD_TOKEN_NAME, REWARD_TOKEN_SYMBOL);
    }

    /// @notice Start vesting period
    function startMinting() external onlyAdmin {
        require(mintingStartTs == 0, "minting already started");
        mintingStartTs = block.timestamp;
        mintingEndTs = mintingStartTs + MINTING_PERIOD;
        emit StartMinting(block.timestamp);
    }

    /// @dev This function will check each transfer and if it is a mint
    ///      will check that totalSupply will be not higher than maxTotalSupplyForCurrentBlock
    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 amount
    ) internal override(ERC20Upgradeable, ERC20SnapshotUpgradeable) {
        super._beforeTokenTransfer(from, to, amount);
    }

    /// @notice Mint given amount for given address
    /// @param to Mint destination
    /// @param amount Amount of mint
    function mint(address to, uint256 amount) external onlyMinter {
        _mint(to, amount);
    }

    /// @dev Override function ERC20 implementation
    function _mint(address account, uint256 amount) internal override(ERC20CappedUpgradeable, ERC20Upgradeable) {
        require(mintingStartTs != 0, "minting not started");
        require(totalSupply() + amount <= maxTotalSupplyForCurrentBlock(), "limit exceeded");
        super._mint(account, amount);
    }

    /// @notice Create snapshot of balances
    function snapshot() external onlySnapshoter returns (uint256) {
        return _snapshot();
    }

    /// @notice Return quantity of weeks since minting started
    /// @return Quantity of weeks
    function currentWeek() public view returns (uint256) {
        if (mintingStartTs > 0) {
            return (block.timestamp - mintingStartTs) / 1 weeks + 1;
        }
        // not started yet
        return 0;
    }

    /// @notice Return maximum Total Supply for the current week.
    ///         The contract can't mint more than this value
    /// @return Maximum allowed supply
    function maxTotalSupplyForCurrentBlock() public view returns (uint256) {
        uint256 allWeeks = MINTING_PERIOD / 1 weeks;

        uint256 week = Math.min(allWeeks, currentWeek());

        if (week == 0) {
            return 0;
        }
        if (week >= MINTING_PERIOD / 1 weeks) {
            return HARD_CAP;
        }

        uint256 finalMultiplier = _log2((allWeeks + 1) * _PRECISION);

        uint256 multiplier = _log2((week + 1) * _PRECISION);

        uint256 maxTotalSupply = INITIAL_TOKEN_AMOUNT + (HARD_CAP * multiplier) / finalMultiplier;

        return Math.min(maxTotalSupply, HARD_CAP);
    }

    function getCurrentSnapshotId() external view returns (uint256) {
        return _getCurrentSnapshotId();
    }

    /*********************************************
     *              PRB-MATH                      *
     *   https://github.com/hifi-finance/prb-math *
     **********************************************/

    /// @notice Calculates the binary logarithm of x.
    ///
    /// @dev Based on the iterative approximation algorithm.
    /// https://en.wikipedia.org/wiki/Binary_logarithm#Iterative_approximation
    ///
    /// Requirements:
    /// - x must be greater than or equal to SCALE, otherwise the result would be negative.
    ///
    /// Caveats:
    /// - The results are nor perfectly accurate to the last decimal,
    ///   due to the lossy precision of the iterative approximation.
    ///
    /// @param x The unsigned 60.18-decimal fixed-point number for which
    ///           to calculate the binary logarithm.
    /// @return result The binary logarithm as an unsigned 60.18-decimal fixed-point number.
    function _log2(uint256 x) public pure returns (uint256 result) {
        require(x >= _PRECISION, "log input should be greater 1e18");

        // Calculate the integer part of the logarithm
        // and add it to the result and finally calculate y = x * 2^(-n).
        uint256 n = mostSignificantBit(x / _PRECISION);

        // The integer part of the logarithm as an unsigned 60.18-decimal fixed-point number.
        // The operation can't overflow because n is maximum 255 and SCALE is 1e18.
        uint256 rValue = n * _PRECISION;

        // This is y = x * 2^(-n).
        uint256 y = x >> n;

        // If y = 1, the fractional part is zero.
        if (y == _PRECISION) {
            return rValue;
        }

        // Calculate the fractional part via the iterative approximation.
        // The "delta >>= 1" part is equivalent to "delta /= 2", but shifting bits is faster.
        for (uint256 delta = _PRECISION / 2; delta > 0; delta >>= 1) {
            y = (y * y) / _PRECISION;

            // Is y^2 > 2 and so in the range [2,4)?
            if (y >= 2 * _PRECISION) {
                // Add the 2^(-m) factor to the logarithm.
                rValue += delta;

                // Corresponds to z/2 on Wikipedia.
                y >>= 1;
            }
        }
        return rValue;
    }

    /// @notice Finds the zero-based index of the first one in the binary representation of x.
    /// @dev See the note on msb in the "Find First Set"
    ///      Wikipedia article https://en.wikipedia.org/wiki/Find_first_set
    /// @param x The uint256 number for which to find the index of the most significant bit.
    /// @return msb The index of the most significant bit as an uint256.
    //noinspection NoReturn
    function mostSignificantBit(uint256 x) internal pure returns (uint256 msb) {
        if (x >= 2**128) {
            x >>= 128;
            msb += 128;
        }
        if (x >= 2**64) {
            x >>= 64;
            msb += 64;
        }
        if (x >= 2**32) {
            x >>= 32;
            msb += 32;
        }
        if (x >= 2**16) {
            x >>= 16;
            msb += 16;
        }
        if (x >= 2**8) {
            x >>= 8;
            msb += 8;
        }
        if (x >= 2**4) {
            x >>= 4;
            msb += 4;
        }
        if (x >= 2**2) {
            x >>= 2;
            msb += 2;
        }
        if (x >= 2**1) {
            // No need to shift x any more.
            msb += 1;
        }
    }
