    function __RewardTokenAuthorization_init(address root) public initializer {
        _setupRole(DEFAULT_ADMIN_ROLE, root);
        _setRoleAdmin(MINTER_ROLE, DEFAULT_ADMIN_ROLE);
        _setRoleAdmin(SNAPSHOTER_ROLE, DEFAULT_ADMIN_ROLE);
    }

    /// @dev Restricted to members of the admin role.
    modifier onlyAdmin() {
        require(isAdmin(msg.sender), "Restricted to admins.");
        _;
    }

    /// @dev Restricted to members of the minter role.
    modifier onlyMinter() {
        require(isMinter(msg.sender), "Restricted to minters.");
        _;
    }

    /// @dev Restricted to members of the snapshoter role.
    modifier onlySnapshoter() {
        require(isSnapshoter(msg.sender), "Restricted to snapshoter.");
        _;
    }

    /// @dev Return `true` if the account belongs to the admin role.
    function isAdmin(address account) public view virtual returns (bool) {
        return hasRole(DEFAULT_ADMIN_ROLE, account);
    }

    /// @dev Return `true` if the account belongs to the minter role.
    function isMinter(address account) public view virtual returns (bool) {
        return hasRole(MINTER_ROLE, account);
    }

    /// @dev Return `true` if the account belongs to the snapshoter role.
    function isSnapshoter(address account) public view virtual returns (bool) {
        return hasRole(SNAPSHOTER_ROLE, account);
    }

    /// @dev Add an account to the minter role. Restricted to admins.
    function addMinter(address account) external virtual onlyAdmin {
        grantRole(MINTER_ROLE, account);
    }

    /// @dev Add an account to the snapshoter role. Restricted to admins.
    function addSnapshoter(address account) external virtual onlyAdmin {
        grantRole(SNAPSHOTER_ROLE, account);
    }

    /// @dev Add an account to the admin role. Restricted to admins.
    function addAdmin(address account) external virtual onlyAdmin {
        grantRole(DEFAULT_ADMIN_ROLE, account);
    }

    /// @dev Remove an account from the manager role. Restricted to admins.
    function removeMinter(address account) external virtual onlyAdmin {
        revokeRole(MINTER_ROLE, account);
    }

    /// @dev Remove an account from the manager role. Restricted to admins.
    function removeSnapshoter(address account) external virtual onlyAdmin {
        revokeRole(SNAPSHOTER_ROLE, account);
    }

    /// @dev Remove oneself from the admin role.
    function renounceAdmin() external virtual {
        renounceRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }
}