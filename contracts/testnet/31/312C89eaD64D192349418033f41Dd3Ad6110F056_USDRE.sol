import "@openzeppelin/contracts-upgradeable/access/AccessControlEnumerableUpgradeable.sol";

contract MembersPoolAuthorization is AccessControlEnumerableUpgradeable {
    bytes32 public constant MANAGER_ROLE = keccak256("MembersPool.MANAGER");
    bytes32 public constant QSRP_REGISTRANT_ROLE = keccak256("MembersPool.QSRP_REGISTRANT");

    /// @dev Add `root` to the admin role as a member.
    function __MembersPoolAuthorization_init(address root) public initializer {
        _setupRole(DEFAULT_ADMIN_ROLE, root);
        _setRoleAdmin(MANAGER_ROLE, DEFAULT_ADMIN_ROLE);
        _setRoleAdmin(QSRP_REGISTRANT_ROLE, DEFAULT_ADMIN_ROLE);
    }

    /// @dev Restricted to members of the admin role.
    modifier onlyAdmin() {
        require(isAdmin(msg.sender), "Restricted to admins.");
        _;
    }

    /// @dev Restricted to members of the manager role.
    modifier onlyManager() {
        require(isManager(msg.sender), "Restricted to managers.");
        _;
    }

    /// @dev Restricted to members of the QSRPRegistrant role.
    modifier onlyQSRPRegistrant() {
        require(isQSRPRegistrant(msg.sender), "Restricted to managers.");
        _;
    }

    /// @dev Return `true` if the account belongs to the admin role.
    function isAdmin(address account) public view virtual returns (bool) {
        return hasRole(DEFAULT_ADMIN_ROLE, account);
    }

    /// @dev Return `true` if the account belongs to the manager role.
    function isManager(address account) public view virtual returns (bool) {
        return hasRole(MANAGER_ROLE, account);
    }

    /// @dev Return `true` if the account belongs to the QSRPRegistrant role.
    function isQSRPRegistrant(address account) public view virtual returns (bool) {
        return hasRole(QSRP_REGISTRANT_ROLE, account);
    }

    /// @dev Add an account to the manager role. Restricted to admins.
    function addManager(address account) external virtual onlyAdmin {
        grantRole(MANAGER_ROLE, account);
    }

    /// @dev Add an account to the QSRPRegistrant role. Restricted to admins.
    function addQSRPRegistrant(address account) external virtual onlyAdmin {
        grantRole(QSRP_REGISTRANT_ROLE, account);
    }

    /// @dev Add an account to the admin role. Restricted to admins.
    function addAdmin(address account) external virtual onlyAdmin {
        grantRole(DEFAULT_ADMIN_ROLE, account);
    }

    /// @dev Remove an account from the manager role. Restricted to admins.
    function removeManager(address account) external virtual onlyAdmin {
        revokeRole(MANAGER_ROLE, account);
    }

    /// @dev Remove an account from the QSRPRegistrant role. Restricted to admins.
    function removeQSRPRegistrant(address account) external onlyAdmin {
        revokeRole(QSRP_REGISTRANT_ROLE, account);
    }

    /// @dev Remove oneself from the admin role.
    function renounceAdmin() external virtual {
        renounceRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }
}

