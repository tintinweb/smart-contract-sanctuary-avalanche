        address user;
        bytes32 clashId;
        uint256[] results;
        int256 status;
        uint256 timestamp;
        uint256 points;
    }

    struct PublicPrediction {
        address user;
        PublicClash clash;
        uint256[] results;
        int256 status;
        uint256 timestamp;
    }

    function onTransferReceived(
        address operator,
        address sender,
        uint256 amount,
        bytes calldata data
    ) external override returns (bytes4) {
        require(msg.sender == address(_token), "Referee: Invalid token, expected CYA");
        bytes memory _data = data;
        uint8 action;
        uint256 offset = UINT8_SIZE;
        assembly {action := mload(add(_data, offset))}
        require(action == 1 || action == 2, "Invalid function");
        uint256 nMatches;
        offset += UINT256_SIZE;
        assembly {nMatches := mload(add(_data, offset))}
        if (action == 1) {
            require(data.length == offset + BYTES32_SIZE + (2 * nMatches * UINT256_SIZE), "Invalid input for function createClash");
            bytes32 title;
            offset += BYTES32_SIZE;
            assembly {title := mload(add(_data, offset))}
            uint256[] memory matchesIds = new uint256[](nMatches);
            for (uint256 i = UINT256_SIZE; i <= nMatches * UINT256_SIZE; i += UINT256_SIZE) {
                offset += UINT256_SIZE;
                assembly {mstore(add(matchesIds, i), mload(add(_data, offset)))}
            }
            uint256[] memory results = new uint256[](nMatches);
            for (uint256 i = UINT256_SIZE; i <= nMatches * UINT256_SIZE; i += UINT256_SIZE) {
                offset += UINT256_SIZE;
                assembly {mstore(add(results, i), mload(add(_data, offset)))}
            }
            createClash(sender, title, amount, matchesIds, results);
        } else if (action == 2) {
            bytes32 id;
            offset += BYTES32_SIZE;
            require(data.length == offset + (nMatches * UINT256_SIZE), "Invalid input for function enterClash");
            assembly {id := mload(add(_data, offset))}
            uint256[] memory results = new uint256[](nMatches);
            for (uint256 i = UINT256_SIZE; i <= nMatches * UINT256_SIZE; i += UINT256_SIZE) {
                offset += UINT256_SIZE;
                assembly {mstore(add(results, i), mload(add(_data, offset)))}
            }
            enterClash(sender, amount, id, results);
        }
        return bytes4(keccak256("onTransferReceived(address,address,uint256,bytes)"));
    }

    function createClash(address from, bytes32 title, uint256 amount, uint256[] memory matchesIds, uint256[] memory results) internal areMatchesUpcoming(matchesIds) {
        uint256 nPredictions = users[from].predictionsIds.length;
        bytes32 id = keccak256(abi.encodePacked(from, nPredictions));
        for (uint256 i = 0; i < matchesIds.length; i++) {
            matches[matchesIds[i]].clashesIds.push(id);
        }
        clashesIds.push(id);
        Clash storage c = clashes[id];
        c.title = title;
        c.user = from;
        c.amount = amount;
        c.matchesIds = matchesIds;
        emit ClashCreated(from, id, matchesIds, amount);
        enterClash(from, amount, id, results);
    }

    function enterClash(address from, uint256 amount, bytes32 id, uint256[] memory results) internal upcomingClash(id) correctAmount(id, amount) notParticipant(id, from) {
        uint256 predictionId = predictions.length;
        //Last parameter 'status' has initial value of 0 (i.e., 0 => Undefined; -1 => Lost; -2 => Reverted; >0 => Prized)
        predictions.push(Prediction(from, id, results, 0, block.timestamp, 0));
        users[from].predictionsIds.push(predictionId);
        Clash storage c = clashes[id];
        c.predictionsIds.push(predictionId);
        c.hasParticipated[from] = true;
        c.total += amount;
        c.nRecipients++;
        emit Predicted(from, id, results);
    }

    function deactivateMatch(uint256 matchId) external onlyOwner isMatchUpcoming(matchId) {
        matches[matchId].hasStarted = true;
        bytes32[] memory matchClashesIds = matches[matchId].clashesIds;
        for (uint256 i = 0; i < matchClashesIds.length; i++) {
            clashes[matchClashesIds[i]].hasStarted = true;
        }
    }

    function endMatch(uint256 matchId, uint256 result) external onlyOwner isMatchUnfinished(matchId) {
        matches[matchId].hasFinished = true;
        matches[matchId].result = result;
        bytes32[] memory matchClashesIds = matches[matchId].clashesIds;
        for (uint256 i = 0; i < matchClashesIds.length; i++) {
            bytes32 clashId = matchClashesIds[i];
            Clash storage c = clashes[clashId];
            bool existUnfinishedMatches = false;
            for (uint256 j = 0; j < c.matchesIds.length; j++) {
                existUnfinishedMatches = existUnfinishedMatches || !matches[c.matchesIds[j]].hasFinished;
                if (matchId == c.matchesIds[j]) {
                    for (uint256 k = 0; k < c.predictionsIds.length; k++) {
                        Prediction storage p = predictions[c.predictionsIds[k]];
                        if (p.results[j] == result) {
                            p.points++;
                            if (p.points == c.maxPoints) {
                                c.nRecipients++;
                            } else if (p.points > c.maxPoints) {
                                c.maxPoints = p.points;
                                c.nRecipients = 1;
                            }
                        }
                    }
                }
            }
            if (!existUnfinishedMatches) {
                c.hasFinished = true;
                //this if statement verifies if the clash should be reverted
                if (c.nRecipients == c.predictionsIds.length) {
                    for (uint256 j = 0; j < c.predictionsIds.length; j++) {
                        Prediction storage p = predictions[c.predictionsIds[j]];
                        _token.transfer(p.user, c.amount);
                        p.status = - 2;
                        emit Reverted(p.user, clashId);
