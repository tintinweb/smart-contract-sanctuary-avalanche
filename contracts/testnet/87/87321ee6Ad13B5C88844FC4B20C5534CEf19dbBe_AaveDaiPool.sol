    event Reverted(address indexed user, bytes32 indexed id);
    event Lost(address indexed user, bytes32 indexed id);

    struct User {
        address addr;
        uint256[] predictionsIds;
    }

    struct Match {
        bytes32[] clashesIds;
        bool hasStarted;
        bool hasFinished;
        uint256 result;
    }

    struct Clash {
        bytes32 title;
        address user;
        uint256 amount;
        uint256[] matchesIds;
        bool hasStarted;
        bool hasFinished;
        uint256[] predictionsIds;
        mapping(address => bool) hasParticipated;
        uint256 maxPoints;
        uint256 nRecipients;
        uint256 total;
    }

