pragma solidity ^0.8.10;

import {IERC20} from "@openzeppelin/contracts/interfaces/IERC20.sol";
import {IPool} from "@aave/core-v3/contracts/interfaces/IPool.sol";
import {IPoolAddressesProvider} from "@aave/core-v3/contracts/interfaces/IPoolAddressesProvider.sol";
import {IAToken} from "@aave/core-v3/contracts/interfaces/IAToken.sol";

contract AaveDaiPool {
    IERC20 public dai = IERC20(0x63E537A69b3f5B03F4f46c5765c82861BD874b6e);
    IAToken public aToken = IAToken(0xA3a8697C4C6A7D9ccF9238cb567b122d53012ac9);
    IPool public aavePool = IPool(IPoolAddressesProvider(0x1775ECC8362dB6CaB0c7A9C0957cF656A5276c29).getPool());

    mapping(address => uint256) public amountByUser;

    constructor() {
        dai.approve(address(aavePool), type(uint256).max);
    }

    function deposit(uint256 _amount) external {
        amountByUser[msg.sender] = _amount;
        require(dai.transferFrom(msg.sender, address(this), _amount), "Token transfer failed");
        aavePool.supply(address(dai), _amount, address(this), 0);
    }

    function withdraw(uint256 _amount) external {
        require(amountByUser[msg.sender] >= _amount, "You cannot withdraw more than deposited");

        aavePool.withdraw(address(dai), _amount, address(this));
        require(dai.transferFrom(address(this), msg.sender, _amount), "Token transfer failed");

        amountByUser[msg.sender] = amountByUser[msg.sender] - _amount;
    }
}

