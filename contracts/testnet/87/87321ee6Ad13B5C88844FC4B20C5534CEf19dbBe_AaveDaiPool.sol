        require(
            !clashes[id].hasStarted,
            "Clash has already started."
        );
        _;
    }

    modifier correctAmount(bytes32 id, uint256 amount){
        require(
            clashes[id].amount == amount,
            "Amount sent does not match the predefined value for this clash."
        );
        _;
    }

